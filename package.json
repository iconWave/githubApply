{
  "name": "webpack-dev-boilerplate",
  "version": "1.0.2",
  "description": "boilerplate",
  "main": "app/index.js",
  "scripts": {
    "dev": "./node_modules/.bin/webpack-dev-server --colors --progress --history-api-fallback --host 0.0.0.0",
    "build": "./node_modules/.bin/webpack --progress --colors --history-api-fallback --config webpack.prod.config.js",
    "lint": "./node_modules/.bin/eslint app",
    "clean": "rm -rf build/*",
    "test": "./node_modules/.bin/mocha --recursive --compilers js:babel-core/register --require ./test/setup.js",
    "test:watch": "npm run test -- --watch"
  },
  "betterScripts": {
    "dev": {
      "command": "./node_modules/.bin/webpack-dev-server --progress",
      "env": {
        "BUILD_DEV": "development"
      }
    },
    "build": {
      "env": {
        "BUILD_PRERELEASE": "production"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GuoYongfeng/webpack-dev-boilerplate.git"
  },
  "keywords": [
    "react",
    "webpack",
    "es6",
    "babel"
  ],
  "author": "guoyongfeng",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/GuoYongfeng/webpack-dev-boilerplate/issues"
  },
  "homepage": "https://github.com/GuoYongfeng/webpack-dev-boilerplate#readme",
  "dependencies": {
    "antd": "^2.2.1",
    "axios": "^0.15.3",
    "better-npm-run": "0.0.8",
    "bootstrap": "^3.3.6",
    "core-decorators": "^0.15.0",
    "firebase": "^3.6.4",
    "history": "^4.4.1",
    "node-sass": "^3.11.1",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-redux": "^4.4.5",
    "react-router": "^3.0.0",
    "react-router-redux": "^4.0.7",
    "reactfire": "^1.0.0",
    "redux": "^3.6.0",
    "redux-logger": "^2.7.4",
    "redux-thunk": "^2.1.0",
    "sass-loader": "^4.0.2"
  },
  "devDependencies": {
    "babel-core": "^6.7.2",
    "babel-eslint": "^6.0.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.6.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-runtime": "^6.6.1",
    "copy-webpack-plugin": "^1.1.1",
    "css-loader": "^0.23.1",
    "eslint": "^2.8.0",
    "eslint-config-airbnb": "^8.0.0",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-react": "^4.2.3",
    "expect": "^1.16.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "html-webpack-plugin": "^2.10.0",
    "jsdom": "^8.2.0",
    "less": "^2.6.1",
    "less-loader": "^2.2.2",
    "mocha": "^2.4.5",
    "open-browser-webpack-plugin": "0.0.2",
    "react-hot-loader": "^1.3.0",
    "style-loader": "^0.13.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  }
}
